@page "/add-asp-net-user-role"
@layout MainLayout
@inherits IyaElepoApp.Pages.AddAspNetUserRoleComponent

@using Radzen
@using Radzen.Blazor
@using IyaElepoApp.Models.ConData
@using Microsoft.AspNetCore.Identity;
@using IyaElepoApp.Models
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]


<RadzenContent Container="main">
  <ChildContent>
    <div class="row">
      <div class="col-md-12">
        <RadzenTemplateForm Data="@aspnetuserrole" Visible="@(aspnetuserrole != null)" TItem="IyaElepoApp.Models.ConData.AspNetUserRole" Submit="@Form0Submit">
          <ChildContent>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Text="Asp Net User" Component="UserId" style="width: 100%">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenDropDown Data="@getAspNetUsersResult" TextProperty="ConcurrencyStamp" ValueProperty="Id" Placeholder="Choose AspNetUser" style="display: block; width: 100%" @bind-Value="@(aspnetuserrole.UserId)" Name="UserId">
                </RadzenDropDown>
                <RadzenRequiredValidator Component="UserId" Text="UserId is required" style="position: absolute">
                </RadzenRequiredValidator>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Text="Asp Net Role" Component="RoleId" style="width: 100%">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenDropDown Data="@getAspNetRolesResult" TextProperty="ConcurrencyStamp" ValueProperty="Id" Placeholder="Choose AspNetRole" style="display: block; width: 100%" @bind-Value="@(aspnetuserrole.RoleId)" Name="RoleId">
                </RadzenDropDown>
                <RadzenRequiredValidator Component="RoleId" Text="RoleId is required" style="position: absolute">
                </RadzenRequiredValidator>
              </div>
            </div>
            <div class="row">
              <div class="col offset-sm-3">
                <RadzenButton ButtonType="ButtonType.Submit" Icon="save" Text="Save" ButtonStyle="ButtonStyle.Primary">
                </RadzenButton>
                <RadzenButton ButtonStyle="ButtonStyle.Light" style="margin-left: 1rem" Text="Cancel" Click="@Button2Click">
                </RadzenButton>
              </div>
            </div>
          </ChildContent>
        </RadzenTemplateForm>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
